{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "./lib/cjs/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "pages/**/*.ts*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}